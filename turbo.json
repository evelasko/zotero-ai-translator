{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "envMode": "strict",
  "globalDependencies": [
    ".env",
    ".env.local"
  ],
  "globalEnv": [
    "NODE_ENV"
  ],
  "tasks": {
    "generate": {
      "cache": false,
      "inputs": [
        "scripts/**/*.js",
        "zotero-schema-cache.json"
      ],
      "outputs": [
        "src/schemas/**",
        "src/types/**",
        "zotero-schema-cache.json"
      ]
    },
    "build": {
      "dependsOn": [
        "^build"
      ],
      "inputs": [
        "src/**/*.ts",
        "tsconfig.json",
        "package.json"
      ],
      "outputs": [
        "lib/**"
      ],
      "env": [
        "NODE_ENV"
      ]
    },
    "@zotero-suite/schema-types#build": {
      "dependsOn": [
        "generate"
      ],
      "inputs": [
        "src/**/*.ts",
        "scripts/**/*.js",
        "tsconfig.json",
        "package.json"
      ],
      "outputs": [
        "lib/**"
      ],
      "env": [
        "NODE_ENV"
      ]
    },
    "dev": {
      "dependsOn": [
        "^build"
      ],
      "cache": false,
      "persistent": true,
      "interactive": true
    },
    "test": {
      "dependsOn": [
        "^build"
      ],
      "inputs": [
        "src/**/*.ts",
        "src/**/*.test.ts",
        "src/**/*.spec.ts",
        "vitest.config.ts",
        "jest.config.js"
      ],
      "outputs": [
        "coverage/**"
      ]
    },
    "test:watch": {
      "dependsOn": [
        "^build"
      ],
      "cache": false,
      "persistent": true,
      "interactive": true
    },
    "test:coverage": {
      "dependsOn": [
        "^build"
      ],
      "inputs": [
        "src/**/*.ts",
        "src/**/*.test.ts",
        "src/**/*.spec.ts",
        "vitest.config.ts",
        "jest.config.js"
      ],
      "outputs": [
        "coverage/**"
      ]
    },
    "lint": {
      "inputs": [
        "src/**/*.ts",
        "src/**/*.js",
        ".eslintrc.*",
        "eslint.config.*"
      ],
      "outputs": []
    },
    "lint:fix": {
      "inputs": [
        "src/**/*.ts",
        "src/**/*.js",
        ".eslintrc.*",
        "eslint.config.*"
      ],
      "outputs": [],
      "cache": false
    },
    "type-check": {
      "dependsOn": [
        "^build"
      ],
      "inputs": [
        "src/**/*.ts",
        "tsconfig.json"
      ],
      "outputs": []
    },
    "clean": {
      "cache": false,
      "outputs": []
    }
  },
  "remoteCache": {
    "enabled": false
  },
  "daemon": true,
  "concurrency": "75%"
}