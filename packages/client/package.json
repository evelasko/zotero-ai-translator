{
  "name": "@zotero-suite/client",
  "version": "1.0.0",
  "description": "A modern, robust, and type-safe Zotero Web API client for TypeScript/JavaScript",
  "author": "Enrique Velasco",
  "license": "MIT",
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "exports": {
    ".": {
      "require": "./lib/index.js",
      "types": "./lib/index.d.ts"
    }
  },
  "files": [
    "lib",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf lib dist"
  },
  "dependencies": {
    "@zotero-suite/schema-types": "file:../schema-types"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "msw": "^2.0.0",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "zotero",
    "api",
    "client",
    "typescript",
    "research",
    "bibliography",
    "citations"
  ]
}