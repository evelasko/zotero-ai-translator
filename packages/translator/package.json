{
  "name": "zotero-ai-translator",
  "version": "2.0.0",
  "description": "AI-powered content translation service for Zotero metadata extraction",
  "author": "Enrique Velasco",
  "license": "MIT",
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "exports": {
    ".": {
      "require": "./lib/index.js",
      "types": "./lib/index.d.ts"
    }
  },
  "files": [
    "lib",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest --coverage",
    "lint": "eslint 'src/**/*.ts' --ignore-pattern 'src/tests/**'",
    "lint:fix": "eslint 'src/**/*.ts' --ignore-pattern 'src/tests/**' --fix",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf lib dist"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.36.0",
    "pdfjs-dist": "^4.0.0",
    "dompurify": "^3.2.3",
    "zotero-schema-types": "workspace:*",
    "zod": "^4.0.5"
  },
  "devDependencies": {
    "@types/dompurify": "^3.2.0",
    "@types/node": "^24.0.14",
    "dotenv": "^16.6.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "zotero",
    "ai",
    "translation",
    "metadata",
    "extraction",
    "typescript",
    "research",
    "bibliography"
  ]
}