{
  "name": "@zotero-suite/translator",
  "version": "1.0.0",
  "description": "AI-powered content translation service for Zotero metadata extraction",
  "author": "Enrique Velasco",
  "license": "MIT",
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "exports": {
    ".": {
      "require": "./lib/index.js",
      "types": "./lib/index.d.ts"
    }
  },
  "files": [
    "lib",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf lib dist"
  },
  "dependencies": {
    "@langchain/core": "^0.3.62",
    "@langchain/openai": "^0.6.0",
    "@mozilla/readability": "^0.6.0",
    "@zotero-suite/schema-types": "file:../schema-types",
    "axios": "^1.10.0",
    "jsdom": "^26.1.0",
    "langchain": "^0.3.30",
    "pdf-parse": "^1.1.1",
    "zod": "^4.0.5"
  },
  "devDependencies": {
    "@types/jsdom": "^21.1.7",
    "@types/node": "^24.0.14",
    "@types/pdf-parse": "^1.1.5",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "zotero",
    "ai",
    "translation",
    "metadata",
    "extraction",
    "typescript",
    "research",
    "bibliography"
  ]
}